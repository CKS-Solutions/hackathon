# Copy to terraform.tfvars and set values. Do not commit terraform.tfvars.

aws_region = "us-east-1"
environment = "prod"

# At least 2 AZs recommended for EKS. Replace with your desired AZs.
availability_zones = ["us-east-1a", "us-east-1b"]

cluster_name  = "hackathon-prod"
cluster_version = "1.31"
vpc_cidr      = "10.0.0.0/16"

# GitHub OIDC (Entrega 4) — replace with your repo
github_repo   = "CKS-Solutions/hackathon"
github_branch = "master"

# Terraform state bucket — same name as in GitHub secret TF_STATE_BUCKET (for CI S3 permissions)
terraform_state_bucket = "terraform-hackathon"

# IAM ARNs allowed to use kubectl against the EKS cluster. Get yours: aws sts get-caller-identity --query Arn --output text
# cluster_access_principal_arns = ["arn:aws:iam::027653366477:user/kenzo"]
